{
  "trailingComma": "none",
  "htmlWhitespaceSensitivity": "strict",
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "singleQuote": true,
        "parser": "babel",
        "printWidth": 200,
        "arrowParens": "always",
        "indent": ["error", 2, { "SwitchCase": 1 }]
      }
    }
  ]
}
