{
  "semi": true,
  "trailingComma": "none",
  "htmlWhitespaceSensitivity": "ignore",
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "singleQuote": true,
        "parser": "babel",
        "printWidth": 200,
        "arrowParens": "always",
        "indent": ["error", 2, { "SwitchCase": 1 }]
      }
    },
    {
      "files": "*.ejs",
      "options": {
        "parser": "html",
        "embeddedLanguageFormatting": "off"
      }
    }
  ]
}
