{
  "name": "sushiboys",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "run-p serve ejs:watch ejs:lint sass js",
    "build": "run-s ejs remove sass:build js:build",
    "serve": "webpack serve",
    "sass": "sass src/assets/scss:dist/assets/css --style=compressed --no-source-map --no-charset --watch",
    "sass:build": "sass src/assets/scss:dist/assets/css --style=compressed --no-source-map --no-charset",
    "js": "webpack --mode development -w",
    "js:build": "webpack --mode production -w",
    "ejs": "ejs-cli -b src/pages/ \"/**/*.ejs\" -o dist/",
    "ejs:watch": "chokidar \"src/pages/\" -c \"npm run ejs\" --initial",
    "ejs:lint": "ejslint src/pages/",
    "remove": "rm -rfv dist/_data/ dist/components/",
    "prettier": "prettier --write \"src/js/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumeko-16/sushiboys.git"
  },
  "author": "Tomohiro Maeno",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yumeko-16/sushiboys/issues"
  },
  "homepage": "https://github.com/yumeko-16/sushiboys#readme",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "babel-loader": "^8.2.2",
    "chokidar-cli": "^3.0.0",
    "ejs-cli": "^2.2.3",
    "ejs-lint": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "sass": "^1.79.4",
    "swiper": "^11.1.14",
    "webpack": "^5.89.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  }
}
