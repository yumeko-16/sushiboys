<!DOCTYPE html>
<html lang="ja">
  <head>
    <!-- prettier-ignore -->
    <%_
      const localmeta = {
        title: `ルーモス牧島 feat.SUSHIBOYS | SUSHIBOYS`,
        description: `ルーモス牧島 feat.SUSHIBOYS`,
        url: `https://sushiboys350.com/discography/feat/lumos-makishima.html`,
        pageid: `discography`,
        type: `feat`,
        index: 0,
        path: '../../../'
      };
      const localogp = {
        title: localmeta.title,
        description: localmeta.description,
        url: localmeta.url
      };
      const localfile = {
        css: `/assets/css/discography-detail.css`,
        js: `/assets/js/discographyDetail.js`
      };
    _%>
    <%- include(localmeta.path + `components/_head`, {meta: localmeta, ogp: localogp, file: localfile}); _%>
    <%- include(localmeta.path + `_data/_discography`); _%>
