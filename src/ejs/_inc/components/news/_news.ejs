<section class="section">
  <div class="section__inner">
    <ul class="card" data-news>
      <% const posts = newsData.posts; %>
      <% posts.forEach(post => { %>
      <li class="card__item">
        <a class="card__anchor" href="<%- post.url %>">
          <% if (post.hero.image !== '') { %>
          <img class="card__image" src="<%- post.hero.image %>" alt="<%- post.hero.alt %>">
          <% } else { %>
          <img class="card__image card__image--no-image" src="/img/news/no-image.png" alt="No image">
          <% } %>
          <h2 class="card__title"><%- post.title %></h2>
        </a>
      </li>
      <% }); %>
    </ul>
  </div>
</section>
