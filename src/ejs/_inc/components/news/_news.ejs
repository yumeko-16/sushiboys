<section class="section">
  <div class="section__inner">
    <ul
      class="card-list"
      data-news
    >
      <%_ const posts = newsData.posts; _%>
      <%_ posts.forEach(post => { _%>
      <li class="card-list__item">
        <a
          class="card"
          href="<%- post.url %>"
        >
          <figure class="card__image-area">
            <%_ if (post.hero.image !== '') { _%>
            <img
              class="card__thumbnail"
              src="<%- post.hero.image %>"
              alt="<%- post.hero.alt %>"
            >
            <%_ } else { _%>
            <img
              class="card__thumbnail card__thumbnail--no-image"
              src="/img/news/no-image.png"
              alt="No image"
            >
            <%_ } _%>
          </figure>

          <div class="card__body">
            <h3 class="card__title"
              ><%- post.title %></h3
            >
          </div>
        </a>
      </li>
      <%_ }); _%>
    </ul>
  </div>
</section>
